#!/bin/bash
COINUSER=arcticcoin
coinexplorerurl=http://explorer.arcticcoin.org/api/getblockcount
highestBlock=$(curl -sk $coinexplorerurl)
sudo -u $COINUSER -H sh -c "echo '{ \"timestamp\": \"`date`\",  \"highestBlock\": \"$highestBlock\", \"details\": ['; arcticcoin-cli goldminenode list-conf; echo ',';  arcticcoin-cli getnetworkinfo; echo ','; arcticcoin-cli getwalletinfo; echo ','; arcticcoin-cli getinfo; echo ']}'"